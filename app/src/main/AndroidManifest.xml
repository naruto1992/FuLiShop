<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ucai.fulishop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.FuLiShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.GoodsListActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.GoodsDetailActivity" />
        <activity android:name=".activity.CatListActivity" />
        <activity android:name=".activity.UserProfileActivity" />
        <activity android:name=".activity.FootPrintsActivity" />
        <activity android:name=".activity.CollectsActivity" />
        <activity android:name=".activity.AddressActivity"></activity>
    </application>

</manifest>